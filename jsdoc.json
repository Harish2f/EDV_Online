{
  "source": {
    "include": ["src"],
    "includePattern": ".jsx$",
    "excludePattern": "(node_modules/|docs)"
  },
  "tags":{
    "allowUnknownTags": ["component"]
  },
  "plugins": ["plugins/markdown", "node_modules/better-docs/component"],
  "template": {
    "better-docs":{
      "name": "My React component"
    }
  },
  "opts": {
    "encoding": "utf8",
    "recurse": true,
    "verbose": true,
    "destination": "./docs/",
    "template": "node_modules/better-docs"
  }
}
